{
    "name": "drip-search",
    "version": "0.0.7",
    "manifest_version": 2,
    "description": "Filter your search results by 'past year'",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.ping",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "drip-search"
    },
    "commands": {
        "pastYear": {
            "description": "Filter search results by 'past year'"
        },
        "twoYearsAgo": {
            "description": "Filter search results by '2 years ago'"
        },
        "imageSearch": {
            "description": "Switch to google search image"
        }
    },
    "permissions": [
        "tabs",
        "http://www.google.com/",
        "https://www.google.com/",
        "http://www.google.co.jp/",
        "https://www.google.co.jp/"
    ]
}