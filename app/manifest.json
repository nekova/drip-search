{
    "name": "drip-search",
    "version": "0.0.4",
    "manifest_version": 2,
    "description": "Filter your search results by 'past year'",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "drip-search"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+S",
                "mac": "Command+Shift+S",
                "chromeos": "Ctrl+Shift+U",
                "linux": "Ctrl+Shift+J"
            },
            "description": "Shortcut key to drip"
        }
    },
    "permissions": [
        "tabs",
        "http://www.google.com/",
        "https://www.google.com/",
        "http://www.google.co.jp/",
        "https://www.google.co.jp/"
    ]
}